---
import { ClientRouter } from "astro:transitions";
import "./src/styles/global.css";
// Supports weights 400-700
import "@fontsource-variable/instrument-sans";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>
            Encuestas Cusco - blog de noticias y articulos actuales y relevantes
            sobre Perú
        </title>

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <meta
            name="description"
            content="Blog de noticias y articulos actuales y relevantes de todo el pais de Perú"
        />

        <meta property="og:url" content="https://encuestascusco.com/" />
        <meta property="og:type" content="website" />
        <meta
            property="og:title"
            content="Encuestas Cusco articulos y noticias de todo el Perú"
        />
        <meta
            property="og:description"
            content="blog de noticias y articulos actuales y relevantes de todo el pais de Perú."
        />
        <meta
            property="og:image"
            content="https://encuestas-cusco.com/og-image.png"
        />
        <meta property="og:locale" content="es_PE" />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:site" content="@encuestas_cusco" />
        <meta name="twitter:creator" content="@encuestas_cusco" />
        <meta
            name="twitter:image"
            content="https://encuestas-cusco.com/og-image.png"
        />
        <meta
            name="twitter:title"
            content="Encuestas Cusco articulos y noticias de todo el Perú"
        />
        <meta
            name="twitter:description"
            content="blog de noticias y articulos actuales y relevantes de todo el pais de Perú."
        />
        <ClientRouter />
    </head>

    <body>
        <slot />
        <Footer />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
